<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AboutUsFragment"
    android:padding="16dp"
    android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Company Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Technopinch Solutions Pvt. Ltd."
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingBottom="16dp" />

            <!-- Company Introduction -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Technopinch Solutions was registered in September 2016 with a vision to create innovative and effective business management solutions..."
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/black" />

            <!-- Flagship Brand -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our flagship brand - Gainbooks offers both financial management and operations management modules..."
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/black"
                android:paddingTop="16dp" />

            <!-- Meet Our Experts -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meet Our Experts"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingTop="24dp" />

            <!-- Expert 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/image_background">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/girl"
                    android:contentDescription="Expert Photo"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Neha Gupta (CEO  Founder - GainBooks)"
                        android:textStyle="bold"
                        android:fontFamily="@font/nunito_regular1"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Neha is a Product and Technology enthusiast with over 16 years of experience in developing rich applications..."
                        android:textSize="14sp"
                        android:textColor="@color/black" />
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/image_background">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/boy"
                    android:contentDescription="Expert Photo"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="HC Gupta(Cofounder- GainBooks)"
                        android:textStyle="bold"
                        android:fontFamily="@font/nunito_regular1"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Founder/ CEO of Saral Softech Pvt. Ltd. who comes with a rich experience of more than 35 years of developing and marketing financial management software for MSMEs. ."
                        android:textSize="14sp"
                        android:textColor="@color/black" />
                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/image_background">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/woman"
                    android:contentDescription="Expert Photo"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reetika Gupta(Cofounder- GainBooks)"
                        android:textStyle="bold"
                        android:fontFamily="@font/nunito_regular1"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reetika has an extensive experience of 14 years in Operational Excellence, Risk Management and Internal Audit."
                        android:textSize="14sp"
                        android:textColor="@color/black" />
                </LinearLayout>

            </LinearLayout>

            <!-- Footer -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â© Technopinch Solutions Pvt Ltd 2024 All rights reserved."
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="bottom"
                android:fontFamily="@font/nunito_regular1"
                android:textColor="@color/colorAccent"
                android:padding="10dp"
                android:background="@drawable/item_background"/>
        </LinearLayout>

</ScrollView>

